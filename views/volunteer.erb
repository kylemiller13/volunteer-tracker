<h1><%= @volunteer.name %></h1>

<form action="/volunteer/<%= @volunteer.id %>/edit" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="name">New volunteer name</label>
    <input class="form-control" type="text" name="name">
  </div>
  <button type="submit" class="btn btn-outline-primary">Update Volunteer</button>
</form>

<a href="/">Home</a>